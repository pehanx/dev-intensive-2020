<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textSize="@dimen/font_large"
        android:text="Hello World!"/>

    <ImageView
        android:id="@+id/iv_bender"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/bender_dance"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_primary"
        android:layout_marginTop="@dimen/spacing_normal">

        <EditText
            android:id="@+id/et_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lines="1"
            android:textColor="@color/color_gray_light"
            android:textColorHint="@color/color_gray_light"
            android:hint="Введите текст"
            android:paddingTop="@dimen/spacing_normal"
            android:paddingBottom="@dimen/spacing_normal"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:imeOptions="actionDone"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iv_send"
            android:layout_width="@dimen/img_btn_normal"
            android:layout_height="@dimen/img_btn_normal"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/spacing_normal"
            android:background="@color/color_primary"
            android:tint="@color/color_gray_light"
            android:src="@drawable/ic_send_black_24dp"/>

    </LinearLayout>

</LinearLayout>